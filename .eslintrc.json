{
  "root": true,
  "extends": [
    "plugin:@next/next/recommended",
    "next/core-web-vitals",
    "./.eslint/main.js"
  ],
  "overrides": [
    {
      "files": [
        "*.tsx"
      ],
      "rules": {
        "jsdoc/require-jsdoc": "off",
        "jsdoc/require-param": "off",
        "@typescript-eslint/naming-convention": [
          "off",
          {
            "selector": [
              "enumMember",
              "interface"
            ],
            "format": [
              "PascalCase"
            ]
          },
          {
            "selector": [
              "variable",
              "function",
              "classMethod"
            ],
            "leadingUnderscore": "allow",
            "trailingUnderscore": "allow",
            "format": [
              "camelCase"
            ]
          }
        ]
      }
    }
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "class-methods-use-this": [
      "off",
      {
        "enforceForClassFields": true
      }
    ],
    "import/extensions": [
      "off",
      "never",
      {
        "ignorePackages": true
      }
    ],
    "eqeqeq": [
      "error",
      "always"
    ]
  },
  "globals": {
    "React": true,
    "JSX": true
  }
}